<!DOCTYPE html />
<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
        <%= stylesheet_link_tag 'main' %>
    </head>
    <body>
        <main class="container edit-container">
          <header>
            <h2 class="fade">Change your password</h2>
          </header>

          <div class="main-content fade">
            <h3> Your password must fulfill the following criteria:</h3>
            <ul>
              <li>Must contain a digit</li>
              <li>Must contain an upper and lower case character</li>
              <li>Must contain a symbol</li>
            </ul>

            <%= form_for(resource, as: resource_name, url: reset_password_path, method: :post) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="two-column-grid mb-5">
                <div class="field">
                  <strong><%= f.label :password, "New password" %></strong><br />
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
                  <% if @minimum_password_length %>
                    <br><em>(<%= @minimum_password_length %> characters minimum)</em><br />
                  <% end %>
                </div>

                <div class="field">
                  <strong><%= f.label :password_confirmation, "Confirm new password" %></strong><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Change my password" %>
              </div>
            <% end %>
          </div>
          <%#= render "devise/shared/links" %>
        </main>

        <%# <script src="/assets/js/background-video.js"></script> %>
        <%= javascript_include_tag 'background-video' %>

        <script>
          function animate (selector, className, delay) {
            setTimeout(() => document.querySelector(selector).classList.add(className), delay)
          }

          animate('.edit-container', 'animated', 500);
          animate('header h2', 'slide-up-fade-in', 800);
          animate('.main-content', 'slide-up-fade-in', 1000);
        </script>
    </body>
</html>
